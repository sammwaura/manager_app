<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ns3="http://schemas.android.com/apk/res-auto"
    xmlns:ns4="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cardpassenger"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="5dp"
        ns3:cardCornerRadius="8.7dp"
        ns4:cardElevation="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/touchpassenger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/colorPrimary" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginRight="27dp"
                                android:letterSpacing="0.093"
                                android:text="Number plate"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12.7sp"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/number_plate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.093"
                                android:text=": KCA 456A"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12.7sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="9dp"
                            android:letterSpacing="0.093"
                            android:text="Driver"
                            android:textColor="#7d7e82"
                            android:textSize="12.7sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/driver"
                            android:layout_width="87dp"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.093"
                            android:text=": John Dereva"
                            android:textColor="#7d7e82"
                            android:textSize="12.7sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/colorPrimary" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="9dp"
                            android:letterSpacing="0.093"
                            android:text="Current location"
                            android:textColor="#7d7e82"
                            android:textSize="12.7sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/currentlocation"
                            android:layout_width="126dp"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.093"
                            android:text=": Naivasha"
                            android:textColor="#7d7e82"
                            android:textSize="12.7sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="9dp"
                            android:letterSpacing="0.093"
                            android:text="Destination"
                            android:textColor="#7d7e82"
                            android:textSize="12.7sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/destination"
                            android:layout_width="126dp"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.093"
                            android:text=": Nairobi"
                            android:textColor="#7d7e82"
                            android:textSize="12.7sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>