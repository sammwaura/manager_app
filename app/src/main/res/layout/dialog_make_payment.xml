<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:gravity="left"
        android:background="#20ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content" ><requestFocus />
    </Spinner>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dad8d8"/>



    <EditText
        android:id="@+id/number_plate1"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number Plate"
        android:layout_marginLeft="46dp"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        />


    <EditText
        android:id="@+id/rate1"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount in Ksh"
        android:layout_marginLeft="46dp"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:inputType="numberDecimal"
        android:maxLength="12"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/name_passenger1"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Passenger name"
        android:layout_marginLeft="46dp"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        />

    <EditText
        android:id="@+id/phone_passenger1"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_marginLeft="46dp"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:inputType="number"
        android:maxLength="12"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        />

    <EditText
        android:id="@+id/ID_passenger1"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Number"
        android:layout_marginLeft="46dp"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:inputType="number"
        android:maxLength="12"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/destination1"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        android:layout_marginLeft="46dp"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        />

    <EditText
        android:id="@+id/origin"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Origin"
        android:layout_marginLeft="46dp"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        />


    <Button
        android:id="@+id/submitDetails"
        android:layout_width="313dp"
        android:layout_height="37dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:background="#e74c3c"
        android:text="Submit"
        android:textColor="#fff" />




</LinearLayout>