<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ns3="http://schemas.android.com/apk/res-auto"
    xmlns:ns4="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        ns3:cardCornerRadius="8.7dp"
        ns4:cardElevation="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/touch"
                    android:layout_width="329dp"
                    android:layout_height="141dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginRight="27dp"
                                android:letterSpacing="0.093"
                                android:text="Number Plate"
                                android:textColor="@color/colortext"
                                android:textSize="12.7sp"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/number_plate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.093"
                                android:text=": KCA 456T"
                                android:textColor="@color/colorAccent"
                                android:textSize="12.7sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="9dp"
                            android:letterSpacing="0.093"
                            android:text="No passengers"
                            android:textColor="@color/colortext"
                            android:textSize="12.7sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/no_passengers"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.093"
                            android:text=": 14"
                            android:textColor="@color/colorAccent"
                            android:textSize="12.7sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="9dp"
                            android:letterSpacing="0.093"
                            android:text="Amount Collected"
                            android:textColor="@color/colortext"
                            android:textSize="12.7sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/amountCollected"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.093"
                            android:text=": 4900"
                            android:textColor="@color/colorAccent"
                            android:textSize="12.7sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="9dp"
                            android:letterSpacing="0.093"
                            android:text="Trip Rate"
                            android:textColor="@color/colortext"
                            android:textSize="12.7sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.093"
                            android:text=": 350ksh"
                            android:textColor="@color/colorAccent"
                            android:textSize="12.7sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="12dp"
                            android:letterSpacing="0.093"
                            android:text="Destination"
                            android:textColor="@color/colortext"
                            android:textSize="12.7sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/destination"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.093"
                            android:text=": Nairobi"
                            android:textColor="@color/colorAccent"
                            android:textSize="12.7sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="12dp"
                            android:letterSpacing="0.093"
                            android:text="Origin"
                            android:textColor="@color/colortext"
                            android:textSize="12.7sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/origin"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.093"
                            android:text=": Nakuru"
                            android:textColor="@color/colorAccent"
                            android:textSize="12.7sp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>